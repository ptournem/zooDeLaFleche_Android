<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/mTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title un saison au zoo qui dure longtemps longtemps longtemps"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/mDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description blabla blablal blablalb ablbazeea blzeaze blbezaeaz" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sat 09 May 2015"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/mLength"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="30 Minutes"
            android:textStyle="italic"
            android:textAlignment="viewEnd"
            android:gravity="end" />
    </LinearLayout>
</LinearLayout>